# Axiom Investment Banking Analytics - Environment Configuration

# ============================================
# AI PROVIDERS
# ============================================

# Multi-AI Provider Configuration - Configure only the providers you want to use

# OpenAI Configuration (Optional)
# OPENAI_API_KEY=sk-your_openai_api_key_here
# OPENAI_BASE_URL=https://api.openai.com/v1
# OPENAI_MODEL_NAME=gpt-4o-mini

# Claude Configuration (Recommended for investment banking reasoning)
# Primary API key format (used by most services)
ANTHROPIC_API_KEY=sk-ant-api03-your_actual_claude_api_key_here

# Claude-specific settings
CLAUDE_API_KEY=sk-ant-api03-your_actual_claude_api_key_here
CLAUDE_BASE_URL=https://api.anthropic.com
CLAUDE_MODEL_NAME=claude-sonnet-4-5-20250219
CLAUDE_MAX_TOKENS=8192
CLAUDE_TEMPERATURE=0.1

# Legacy model (if needed for fallback)
# CLAUDE_MODEL_NAME_LEGACY=claude-3-5-sonnet-20241022

# SGLang Local Inference (Optional - NVIDIA systems only)
# SGLANG_API_KEY=
# SGLANG_BASE_URL=http://localhost:30000/v1
# SGLANG_MODEL_NAME=meta-llama/Meta-Llama-3.1-8B-Instruct

# Hugging Face Configuration (Optional)
# HUGGINGFACE_API_KEY=hf_your_huggingface_api_key_here
# HUGGINGFACE_BASE_URL=https://api-inference.huggingface.co
# HUGGINGFACE_MODEL_NAME=microsoft/DialoGPT-medium

# Google Gemini Configuration (Optional)
# GEMINI_API_KEY=your_gemini_api_key_here
# GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta
# GEMINI_MODEL_NAME=gemini-1.5-pro

# ============================================
# RESEARCH & DATA TOOLS
# ============================================

# Tavily Research API
# TAVILY_API_KEY=tvly-your-key-here

# Firecrawl Web Scraping
# FIRECRAWL_API_KEY=fc-your-key-here

# ============================================
# FINANCIAL DATA PROVIDERS
# ============================================

# ðŸ†“ FREE TIER PROVIDERS (No keys required)
# Yahoo Finance - Completely FREE unlimited (no API key needed)
# SEC Edgar - US Government data
SEC_EDGAR_USER_AGENT=Axiom_Investment_Banking analytics@axiom.com

# Alpha Vantage (FREE: 500 calls/day per key)
# Use comma-separated keys for rotation
# ALPHA_VANTAGE_API_KEY=key1,key2,key3

# Financial Modeling Prep (FMP) (FREE: 250 calls/day)
# FINANCIAL_MODELING_PREP_API_KEY=your-fmp-key
# FMP_API_KEY=your-fmp-key

# Finnhub (FREE: 60 calls/minute)
# FINNHUB_API_KEY=your-finnhub-key

# Polygon.io MCP Server (FREE: 5 calls/minute)
# POLYGON_API_KEY=your-polygon-key

# API Rotation Settings
FINANCIAL_API_ROTATION_ENABLED=true
ALPHA_VANTAGE_API_ROTATION_ENABLED=true
POLYGON_API_ROTATION_ENABLED=true
FINNHUB_API_ROTATION_ENABLED=true
FMP_API_ROTATION_ENABLED=true

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL
POSTGRES_USER=axiom
POSTGRES_PASSWORD=axiom_password
POSTGRES_DB=axiom_finance
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://axiom:axiom_password@localhost:5432/axiom_finance

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=axiom_redis
REDIS_URL=redis://:axiom_redis@localhost:6379

# Vector Database (ChromaDB)
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_URL=http://localhost:8000

# Graph Database (Neo4j)
NEO4J_USER=neo4j
NEO4J_PASSWORD=axiom_neo4j
NEO4J_BOLT_PORT=7687
NEO4J_HTTP_PORT=7474
NEO4J_URI=bolt://localhost:7687

# ============================================
# LANGCHAIN TRACING & OBSERVABILITY
# ============================================

LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
# LANGCHAIN_API_KEY=lsv2_pt_your-langsmith-key
LANGCHAIN_PROJECT=axiom-investment-banking

# ============================================
# MLFLOW EXPERIMENT TRACKING
# ============================================

MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_ARTIFACT_ROOT=./mlflow/artifacts
MLFLOW_EXPERIMENT_NAME=axiom-quant-finance

# ============================================
# FEAST FEATURE STORE
# ============================================

FEAST_REGISTRY_PATH=./feature_repo/
FEAST_ONLINE_STORE=redis://localhost:6379

# ============================================
# GPU CONFIGURATION
# ============================================

ENABLE_GPU=true
CUDA_VISIBLE_DEVICES=0
PYTORCH_ALLOC_CONF=max_split_size_mb:512

# ============================================
# INVESTMENT BANKING ANALYSIS SETTINGS
# ============================================

DEBUG=false
MAX_PARALLEL_ANALYSIS_TASKS=5
FINANCIAL_DATA_DEPTH=comprehensive
DUE_DILIGENCE_CONFIDENCE_THRESHOLD=0.65
VALUATION_MODEL_TYPES=dcf,comparable,precedent

# Risk Assessment
RISK_ANALYSIS_ENABLED=true
REGULATORY_COMPLIANCE_CHECK=true
MARKET_VOLATILITY_ASSESSMENT=true

# ============================================
# API CONFIGURATION
# ============================================

API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=axiom-secret-key-change-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================
# MODEL CONFIGURATION
# ============================================

MODEL_CACHE_SIZE=25
BATCH_SIZE=32
MAX_WORKERS=4
DEFAULT_MODEL_PROVIDER=claude
DEFAULT_MODEL=claude-3-5-sonnet-20241022

# ============================================
# PERFORMANCE TUNING
# ============================================

ENABLE_MODEL_CACHING=true
ENABLE_RESPONSE_CACHING=true
CACHE_TTL_SECONDS=3600
CONNECTION_POOL_SIZE=10
MAX_OVERFLOW_CONNECTIONS=20

# ============================================
# MONITORING
# ============================================

PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000

# ============================================
# SECURITY
# ============================================

JWT_SECRET_KEY=axiom-jwt-secret-change-in-production
API_KEY_SALT=axiom-api-salt-change-in-production
ENABLE_API_KEY_AUTH=true
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60

# ============================================
# LOGGING
# ============================================

LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/axiom.log
ENABLE_FILE_LOGGING=true
ENABLE_CONSOLE_LOGGING=true

# ============================================
# FEATURE FLAGS
# ============================================

ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_DEBUG_MODE=false
ENABLE_PROFILING=false

# ============================================
# MCP SERVERS
# ============================================

MCP_SERVER_HOST=localhost
MCP_SERVER_PORT_START=8100
ENABLE_MCP_SERVERS=true

# ============================================
# DERIVATIVES PLATFORM
# ============================================

ENABLE_DERIVATIVES=true
MAX_GREEKS_BATCH_SIZE=1000
VOLATILITY_SURFACE_CACHE_TTL=300

# ============================================
# DEVELOPMENT SETTINGS
# ============================================

TESTING=false
ENVIRONMENT=production

# ============================================
# PATHS
# ============================================

PROJECT_ROOT=/home/user/axiom
DATA_DIR=./data
OUTPUT_DIR=./outputs
MODEL_DIR=./models
CACHE_DIR=./.cache