FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    prometheus-client \
    psycopg2-binary \
    python-dotenv

# Copy metrics exporter
COPY monitoring/airflow_metrics_exporter.py /app/

# Run the exporter
CMD ["python", "/app/airflow_metrics_exporter.py"]